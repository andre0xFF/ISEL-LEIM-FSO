package tester;

import robot.MyRobotLego;

public class test 
{
	public static void main(String[] args) throws InterruptedException {
		MyRobotLego robot = new MyRobotLego();
		
		robot.OpenNXT("FSO1");
		
		Thread.sleep(10000);
		
		robot.SetSensorLowspeed(MyRobotLego.BACK_SCANNER_PORT);
		int initialDistance = robot.Sensor(MyRobotLego.BACK_SCANNER_PORT);
		long initialTime = System.nanoTime();
		
		robot.Reta(100);
		robot.Parar(false);
		
		while((robot.Sensor(MyRobotLego.BACK_SCANNER_PORT) - initialDistance) < 100) {
			Thread.sleep(500);
		}
		
		int finalDistance = robot.Sensor(MyRobotLego.BACK_SCANNER_PORT);
		long finalTime = System.nanoTime();
		
		System.out.println("Travelled distance: " + (finalDistance - initialDistance));
		System.out.println("Elapsed time: " + (finalTime - initialTime));
	}

}